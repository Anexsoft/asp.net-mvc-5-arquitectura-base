@model List<ApplicationRole>
@{
    ViewBag.Title = "Roles";
}

<h2 class="page-header">@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
            </tr>
        }
    </tbody>
</table>

<hr />

@using (Html.BeginForm("Add", "Roles", FormMethod.Post, new { @class = "form-inline well well-sm" }))
{
    <div class="form-group">
        <input type="text" class="form-control" name="Name" placeholder="New Role name">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
}